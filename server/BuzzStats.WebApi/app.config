<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <appSettings>
        <add key="BuzzServerUrl" value="http://buzz.reality-tape.com/" />
        <add key="WebApiUrl" value="http://localhost:9000/" />
        <!--
        Set to True to re-create the schema in the database
        -->
        <add key="ExportSchema" value="False" />
    </appSettings>

    <connectionStrings>
        <!--        <add name="BuzzStats" providerName="System.Data.SqlClient" connectionString="Server=.;Database=BuzzStats;User Id=buzzstats;Password=#buzzstats#;" />    -->
        <add name="BuzzStats" providerName="MySql.Data.MySqlClient" connectionString="Server=localhost;Database=BuzzStats;Uid=buzzstats;Pwd=#buzzstats#;Charset=utf8" />
    </connectionStrings>

    <log4net>
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
            </layout>
        </appender>
        <root>
            <level value="INFO" />
            <appender-ref ref="ConsoleAppender" />
        </root>
        <logger name="NHibernate">
            <level value="WARN" />
        </logger>
    </log4net>

    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
    <system.data>
        <DbProviderFactories>
            <remove invariant="MySql.Data.MySqlClient" />
            <add name="MySQL Data Provider" invariant="MySql.Data.MySqlClient" description=".Net Framework Data Provider for MySQL" type="MySql.Data.MySqlClient.MySqlClientFactory, MySql.Data, Version=6.9.9.0, Culture=neutral, PublicKeyToken=c5687fc88969c44d" />
        </DbProviderFactories>
    </system.data>
</configuration>