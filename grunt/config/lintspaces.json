{
    "xml": {
        "src": [
            "src/**/*.config",
            "src/**/*.csproj",
            "src/**/*.xml",

            "!src/packages/**/*",
            "!src/**/bin/*.*",
            "!src/**/bin/Debug/*.*",
            "!src/**/bin/Release/*.*",
            "!src/**/obj/Debug/*.*",
            "!src/**/obj/Release/*.*"
        ],
        "options": {
            "trailingspaces": true,
            "indentation": "spaces",
            "spaces": 2,
            "allowsBOM": true
        }
    },

    "cs": {
        "src": [
            "src/**/*.cs",

			"!src/**/*.designer.cs",
			"!src/**/*.Designer.cs",
			"!src/**/Service References/**/*",
            "!src/packages/**/*",
            "!src/**/bin/**/*.*",
            "!src/**/obj/**/*.*"
        ],
        "options": {
            "newline": true,
            "trailingspaces": true,
            "indentation": "spaces",
            "spaces": 4,
            "allowsBOM": true
        }
    },

    "js": {
        "src": "<%= eslint.all.files.src %>",
        "options": {
            "newline": true,
            "trailingspaces": true,
            "indentation": "spaces",
            "spaces": 4,
            "ignores": ["js-comments"]
        }
    }
}
