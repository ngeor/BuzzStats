{
  "name": "buzzstats-client",
  "description": "BuzzStats client",
  "author": "Nikolaos Georgiou <Nikolaos.Georgiou@gmail.com>",
  "private": true,
  "version": "2.0.0-alpha",
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "serve": "http-server -o -s -c 1 -a localhost",
    "dev": "npm-run-all --parallel less watchify serve",
    "build": "cross-env NODE_ENV=production npm run less && browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "eslint": "eslint --ext js,vue .",
    "eslint-fix": "eslint --fix --ext js,vue .",
    "less": "lessc styles/app.less dist/app.css",
    "mocha": "mocha --require babel-core/register",
    "test": "npm-run-all --parallel eslint mocha",
    "eslint-watch": "nodemon -e js,vue,yml node_modules/.bin/eslint -- --ext js,vue ."
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "browserify-hmr": "^0.3.6",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "envify": "^4.1.0",
    "eslint": "^5.9.0",
    "eslint-config-ngeor": "^0.3.0",
    "eslint-plugin-vue": "^4.7.1",
    "http-server": "^0.11.1",
    "less": "^3.8.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "uglify-js": "^3.4.9",
    "vueify": "^9.4.1",
    "watchify": "^3.11.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "eslintIgnore": [
    "dist/"
  ]
}
